@page "/{username}"
@inject IMiniMain MiniMain
@using System.Collections.Generic
@using System.Linq
@using Minitwit.Entities
@using Repos;
@inject NavigationManager NavigationManager

@if (NavigationManager.Uri == MiniMain.Url_for("public timeline")) @* public_timeline *@
     {
        <h2>Public Timeline</h2>
     }
    else if (NavigationManager.Uri == MiniMain.Url_for("user timeline")) @* user timeline *@
    {
        <h2>@MiniMain.User 's Timeline</h2>
    }
    else
    {
        <h2>My Timeline</h2>
    }
    @* {% if g.user %} *@
@* {% if request.endpoint == 'user_timeline' %} *@
<div class=followstatus>
    @* {% if g.user.user_id == profile_user.user_id %} *@
    @if (@MiniMain.User.username == username)
    {
        <p>This is you!</p>
    }
    @* {% elif followed %} *@
    else if (IsFollowed && MiniMain.User.user_id != -1)
    {
        <p>You are currently following this user.</p>
        <a class=unfollow href=@MiniMain.UrlForUnfollow(username)>Unfollow user</a>
    }
    @* {% else %} *@
    else if (MiniMain.User.user_id != -1)
    {
        <p>You are not yet following this user.</p>
        <a class=follow href=@MiniMain.UrlForFollow(username)>Follow user</a>
    }
</div>
     
<ul class=messages>
@* {% for message in messages %} *@
    @if (MiniMain.UserMessageDTO.ToList().Count > 0)
    {
        @foreach (var message in @MiniMain.UserMessageDTO)
        {
            <li><img src=@MiniMain.GravatarUrl(message.email, 48)>
            <strong><a href=@MiniMain.UrlForUser(message.username)>@message.username</a></strong>
            @message.text
            <small>&mdash; @message.pub_date </small></li> 
        }
    }
    else
    {
        <li><em>There's no messages so far</em></li>
    }
</ul>

@code {
    [Parameter]
    public string username { get; set; }
    private bool IsFollowed = false;

    protected override async Task OnInitializedAsync()
    {
        MiniMain.FlashedMessages = null;
        
        MiniMain.UserMessageDTO = new List<UserMessageDTO>();

        if (MiniMain.User.username != username && MiniMain.User.username != null)
        {
            IsFollowed = await MiniMain.IsFollowed(MiniMain.User.username, username);
        }

        await MiniMain.UserTimeline(username);
    }
}